// tsconfig.cypress.json
{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "CommonJS",
        "types": [
            "cypress",
            "node"
        ],
        "target": "ES2020", // or "ESNext" if preferred
        "strict": true
    },
    "include": [
        "cypress",
        "cypress.config.ts"
    ]
}